<Window x:Class="AufträgeOrgadata.ProWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ProWindow"
        Height="305"
        Width="575"
        Loaded="PWindow_Loaded">
    <Grid>
        <ListView
            x:Name="lvProWindow"
            HorizontalAlignment="Left"
            Height="251" VerticalAlignment="Top"
            Width="565"
            Margin="1,23,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Header="ID"
                        DisplayMemberBinding="{Binding ID}" />
                    <GridViewColumn
                        Header="ProgrammName"
                        DisplayMemberBinding ="{Binding ProgrammName}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Menu
            x:Name="menu"
            HorizontalAlignment="Left"
            Height="23"
            VerticalAlignment="Top"
            Width="565">
            <MenuItem
                Header="Data" />
            <MenuItem
                x:Name="mmDelete"
                Header="Delete"
                Height="23"
                Width="53"
                Click ="btnMDelete_Click" />
            <MenuItem
                x:Name="mAdd"
                Header="ADD"
                Height="23"
                Width="53"
                Click="mAdd_Click" />
            <MenuItem
                x:Name="mClose"
                Header="Close"
                Height="23"
                Width="53"
                Click ="btnMClose_Click" />
        </Menu>
    </Grid>
</Window>