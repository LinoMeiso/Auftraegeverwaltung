<Window x:Name="database1" x:Class="AufträgeOrgadata.database"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Datenbank" 
        Height="340" 
        Width="280" 
        Icon="Images/database.ico">
    <Grid Background="#FF5584FF">
        <Label 
            x:Name="lblDatenbank" 
            Content="Datenbank" 
            HorizontalAlignment="Left" 
            Height="46" 
            Margin="25,10,0,0" 
            VerticalAlignment="Top"
            Width="125"
            FontSize="24"/>
        <TextBox 
            x:Name="txtUid" 
            HorizontalAlignment="Left" 
            Height="20"
            Margin="25,212,0,0" 
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="70"/>
        <Label 
            x:Name="lblUid" 
            Content="Username:" 
            HorizontalAlignment="Left" 
            Height="26" Margin="25,181,0,0" 
            VerticalAlignment="Top" 
            Width="70"/>
        <TextBox 
            x:Name="txtPassword"
            HorizontalAlignment="Left" 
            Height="20" Margin="142,105,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top"
            Width="70"/>
        <Label 
            x:Name="lblPassword"
            Content="Password:"
            HorizontalAlignment="Left"
            Height="26" Margin="142,74,0,0" 
            VerticalAlignment="Top"
            Width="70"/>
        <TextBox 
            x:Name="txtServer" 
            HorizontalAlignment="Left"
            Height="20" Margin="25,105,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="70"/>
        <Label 
            x:Name="lblServer" 
            Content="Server:"
            HorizontalAlignment="Left" 
            Height="26"
            Margin="25,74,0,0"
            VerticalAlignment="Top" 
            Width="48"/>
        <TextBox 
            x:Name="txtPort"
            HorizontalAlignment="Left" 
            Height="20"
            Margin="142,156,0,0"
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="70"/>
        <Label 
            x:Name="lblPort" 
            Content="Port:"
            HorizontalAlignment="Left" 
            Height="26" Margin="142,125,0,0" 
            VerticalAlignment="Top" 
            Width="48"/>
        <TextBox
            x:Name="txtDatabase"
            HorizontalAlignment="Left" 
            Height="20" Margin="25,156,0,0"
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="70"/>
        <Label
            x:Name="lblDatabase"
            Content="Database:" 
            HorizontalAlignment="Left" 
            Height="26" Margin="25,125,0,0"
            VerticalAlignment="Top"
            Width="70"/>
        <Button 
            x:Name="btnClose"
            Content="Abbrechen" 
            HorizontalAlignment="Left" 
            Height="23" Margin="142,251,0,0"
            VerticalAlignment="Top" 
            Width="70" 
            Click="btnClose_Click"/>
        <Button 
            x:Name="btnOk"
            Content="OK" 
            HorizontalAlignment="Left" 
            Height="23" Margin="25,251,0,0"
            VerticalAlignment="Top" 
            Width="70" 
            Click="btnOk_Click"/>
    </Grid>
</Window>